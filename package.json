{
  "name": "advent-of-code",
  "version": "0.1.0",
  "scripts": {
    "clean": "rescript clean",
    "build": "rescript",
    "watch": "rescript build -w",
    "test": "jest",
    "reformat": "./scripts/reformat.sh"
  },
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "yarn@4.6.0",
  "keywords": [
    "rescript"
  ],
  "author": "Danny Siu <danny.siu@gmail.com>",
  "license": "MIT",
  "jest": {
    "testMatch": [
      "**/*_Test.res.(js|ts|jsx|tsx|mjs)"
    ],
    "transform": {
      "^.+\\.m?jsx?$": "@swc/jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(rescript|@rescript/core|@glennsl/rescript-jest|@ryyppy/rescript-promise|re-fp|rescript-bag|@resinfo/parser|rescript-js|js-array2-ex|tablecloth-rescript|@dsiu/rescript-stdlib-fp|@dsiu/rescript-graphology|@greenlabs/garter|rescript-relude|rescript-bastet|rescript-relude-parse|)/)"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "mjs"
    ]
  },
  "devDependencies": {
    "@glennsl/rescript-jest": "github:dsiu/rescript-jest#rescript-v12",
    "@swc/core": "^1.10.4",
    "@swc/jest": "^0.2.37",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "rescript": "^12.0.0-alpha.7"
  },
  "dependencies": {
    "@dsiu/rescript-bag": "workspace:^",
    "@dsiu/rescript-graphology": "workspace:^",
    "@dsiu/rescript-stdlib-fp": "workspace:^",
    "@jmagaram/rescript-extras": "workspace:^",
    "@jmagaram/rescript-seq": "workspace:^",
    "@rolandpeelen/rewatch": "^1.0.9",
    "debug": "^4.4.0",
    "ms": "^2.1.3",
    "rescript-nodejs": "^16.1.0",
    "rescript-relude": "workspace:^",
    "rescript-relude-parse": "workspace:^",
    "rescript-schema": "^9.0.1"
  }
}
